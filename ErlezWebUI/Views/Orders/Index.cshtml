@model ErlezWebUI.Models.OrdersIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            ArticleName
        </th>
        <th>
            Amount (UnitType)
        </th>
        <th>
            UnitPrice
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Orders) {
    <tr>
        <td>
            @item.CompanyBuyer.Name
        </td>
        <td>
            @item.ArticleName
        </td>
        <td>
            @item.Amount (@item.UnitType)
        </td>
        <td>
            @item.UnitPrice
        </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.OrderType)
        </td>*@
        <td>
            @Html.ActionLink("Sammanfoga faktureringsunderlag", "EvalInvoice", new { id = item.Id })
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>

<div class="col-md-12 text-center">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { Page = x }))
</div>

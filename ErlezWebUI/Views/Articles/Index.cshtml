@model ErlezWebUI.Models.ArticleIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Articles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            UnitPrice
        </th>
        <th>
            UnitType
        </th>
        <th>
            CompanySeller
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Articles) {
    <tr>
        <td>
            @item.ArticleName
        </td>
        <td>
            @item.UnitPrice
        </td>
        <td>
            @item.UnitType
        </td>
        <td>
            @item.CompanySeller.Name
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div class="col-md-12 text-center">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { Page = x }))
</div>
